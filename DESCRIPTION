Package: shiny.emptystate
Title: Empty State Components for 'Shiny'
Version: 0.1.0
Authors@R: 
    c(
        person("Ryszard", "Szymański", role = c("aut", "cre"), email = "opensource+ryszard@appsilon.com"),
